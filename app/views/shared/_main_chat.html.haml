.chat-main
  .chat-main__group-info
    .group-box__left
      .group-box__left--group-name
        =@group.name
      .group-box__left--member
        Memberï¼š
        - @members.each do |member|
          = member.name
    = link_to "Edit", edit_group_path(params[:group_id]), class: "edit-btn"
  .chat-main__message-list
    = render @messages
  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .form
        .form__input
          = f.text_field :body, class: 'form__input--text', placeholder: 'type a message'
          = f.label :image, class: 'form__input--image' do
            = icon('fas', 'image')
            = f.file_field :image, class: 'file'
        .form__send
          = f.submit 'Send', class: 'form__send--btn'